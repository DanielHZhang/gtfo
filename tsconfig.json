{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "outDir": "dist",
    // "strictNullChecks": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".vscode",
    ".idea",
  ],
}
